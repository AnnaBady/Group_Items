@page
@model WebApplication1.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Items_Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Items_Class.Id" />
            <div class="form-group">
                <label asp-for="Items_Class.ItemName" class="control-label"></label>
                <input asp-for="Items_Class.ItemName" class="form-control" />
                <span asp-validation-for="Items_Class.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Items_Class.ItemPrice" class="control-label"></label>
                <input asp-for="Items_Class.ItemPrice" class="form-control" />
                <span asp-validation-for="Items_Class.ItemPrice" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <label asp-for="Items_Class.ItemImage" class="custom-file-lable"></label>
                <input type="file" asp-for="Items_Class.ItemImage" class="custom-file-input" />
                <span asp-validation-for="Items_Class.ItemImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Items_Class.Groups.Id" class="control-label">Group</label>
                <select asp-for="Items_Class.Groups.Id" asp-items="@(new SelectList(Model.AllGroup, "Id", "GroupName"))"></select>
                <span asp-validation-for="Items_Class.ItemPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
